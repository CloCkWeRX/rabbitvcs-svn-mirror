import os.path
import sys
from optparse import OptionParser

from rabbitvcs.lib.helper import launch_ui_window

usage = """usage: rabbitvcs <module> [path1] [path2] ...

Available Modules
------------------
about, add, blame, checkout, cleanup, commit, create, delete, export,
ignore, import, lock, log, merge, properties, relocate, rename,
resolve, revert, settings, switch, unlock, update, updateto

"""

if len(sys.argv) < 2:
    raise SystemExit(usage)

parser = OptionParser()
parser.add_option("-r", "--revision", help="specify the revision number")
(options, args) = parser.parse_args(sys.argv)

args.pop(0)
module = args.pop(0)

args_all = ["--base-dir=" + os.getcwd()]
if options.revision is not None:
    args_all += ["--revision=" + options.revision]
args_all += args

launch_ui_window(module, args_all)
